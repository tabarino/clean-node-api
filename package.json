{
  "name": "clean-node-api",
  "version": "2.0.1",
  "description": "NodeJs Api using Clean Architecture",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc --project tsconfig.production.json",
    "dev:build": "rimraf dist && tsc",
    "dev:start": "npm run dev:build && docker-compose up -d",
    "prod:start": "npm run build && docker-compose -f docker-compose.production.yml up -d",
    "docker:stop": "docker-compose stop",
    "docker:down": "docker-compose down",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9229 --nolazy dist/main/server.js",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tabarino/clean-node-api.git"
  },
  "keywords": [],
  "author": "Ivan Tabarino",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tabarino/clean-node-api/issues"
  },
  "homepage": "https://github.com/tabarino/clean-node-api#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.6.6",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-standard": "^10.0.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^4.1.4",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "16.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
